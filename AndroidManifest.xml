<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ie.cathalcoffey.android.projecteuler"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:icon="@drawable/icon" android:label="@string/app_name">

        <!-- Broadcast Receiver that will process AppWidget updates -->
		<receiver android:name=".MyAppWidgetProvider" android:label="@string/app_name">
		   <intent-filter>
		      <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		      <action android:name="ie.cathalcoffey.android.projecteuler.ProjectEuler.ACTION_WIDGET_SETTINGS"/>
		   </intent-filter>
		   <meta-data android:name="android.appwidget.provider" android:resource="@xml/appwidget_provider" />
		</receiver>
    
		<activity android:theme="@android:style/Theme.Black.NoTitleBar" android:name=".Configuration" android:screenOrientation="nosensor" android:configChanges="keyboardHidden|orientation">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
		    </intent-filter>
		</activity>
		
		<activity android:theme="@android:style/Theme.Black.NoTitleBar" android:name=".ProblemsTab" android:screenOrientation="nosensor" android:configChanges="keyboardHidden|orientation">
		    <intent-filter>
		        <action android:name=".ProblemViewer"/>
		    </intent-filter>
		</activity>
		
		<activity android:theme="@android:style/Theme.Black.NoTitleBar" android:name=".ProblemViewer" android:configChanges="keyboardHidden">
		</activity>
		
		<activity android:theme="@android:style/Theme.Black.NoTitleBar" android:name=".Tabs" android:screenOrientation="nosensor" android:configChanges="keyboardHidden|orientation">
		</activity>
		
		<activity android:theme="@android:style/Theme.Black.NoTitleBar" android:name=".Settings" android:screenOrientation="nosensor" android:configChanges="keyboardHidden|orientation">
		</activity>
    </application>
</manifest> 